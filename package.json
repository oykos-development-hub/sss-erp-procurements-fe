{
  "name": "procurements-ms-client",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "setup": "npm install && node -r dotenv/config setup.js",
    "dev": "vite",
    "preview": "vite preview",
    "serve": "http-server dist -p 3002 --cors",
    "build": "npm run git:pull-request && node -r dotenv/config load-environment.cjs && tsc && vite build",
    "format": "find ./src -type f -name '*.js' -o -name '*.jsx' -o -name '*.ts' -o -name '*.tsx' -o -name '*.css' -o -name '*.md' -o -name '*.json' | xargs npx prettier --write",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint ./src --fix --ext .js,.jsx,.ts,.tsx",
    "ts:build": "npx tsc -b",
    "ts:declarations": "npx tsc --declaration",
    "git:commit": "npm run lint:fix && npm run format",
    "git:pull-request": "npm run lint:fix && npm run format"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run git:commit",
      "pre-push": "npm run git:pull-request"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.1",
    "@react-pdf/renderer": "^3.1.14",
    "@types/yup": "^0.32.0",
    "lottie-react": "^2.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.9",
    "react-router-dom": "^6.10.0",
    "yup": "^1.2.0"
  },
  "devDependencies": {
    "@oykos-development/devkit-react-ts-styled-components": "^1.7.1",
    "@types/node": "^20.6.3",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react": "^4.0.0-beta.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "husky": "^8.0.3",
    "next-transpile-modules": "^10.0.0",
    "prettier": "^2.8.8",
    "styled-components": "^5.3.10",
    "typescript": "^5.0.2",
    "vite": "^4.3.0-beta.2"
  }
}
